---
// @ts-ignore
const topics = [
  "Storytelling Games",
  "Idea Generation Games",
  "Decision-making Activities",
  "Stakeholder Engagement Games",
  "Visualization Design Activites",
  "Design Evaluation Games",
  "Visualization Activities",
  "Serious Games",
  "Digital Games",
  "Analog Games",
  "Educational Games",
  "Gamification Approaches"
];
---

<div class="mt-16 md:mt-0 mb-8 fade-in-section opacity-0 translate-y-8 transition-all duration-700">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
  Workshop Topics
  </h2>
  <p class="text-lg mt-4 text-slate-600">
  The following topics fall within the scope of the workshop, but we encourage
  broader contributions.
  </p>
</div>

<div class="mt-12 mb-12 md:mt-0 fade-in-section opacity-0 translate-y-8 transition-all duration-700">
  {topics.sort(() => Math.random() - 0.5).map((topic) => (
    <div class="inline-block mb-6 mt-4 mr-2 last:mr-0 transition-transform duration-200 hover:scale-110">
      <span class="bg-[#FF69B4] border border-[#FF69B4] text-white text-lg font-bold me-2 px-5 py-2 rounded-full">
      {topic}
      </span>
    </div>
  ))}
</div>

<script>
  const observerOptions = {
  threshold: 0.1,
  rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
  entries.forEach((entry) => {
    if (entry.isIntersecting) {
    entry.target.classList.remove('opacity-0', 'translate-y-8');
    entry.target.classList.add('opacity-100', 'translate-y-0');
    }
  });
  }, observerOptions);

  document.querySelectorAll('.fade-in-section').forEach((el) => {
  observer.observe(el);
  });
</script>
