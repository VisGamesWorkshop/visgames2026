<div class="mt-16 mb-16 md:mt-0 opacity-0 transition-opacity duration-1000" id="important-dates">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Important Dates
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    All deadlines are at 11:59 pm (23:59) <a 
    href="https://time.is/Anywhere_on_Earth"
    target="_blank"
    class="underline"
    rel="noopener"
    >
    Anywhere on Earth (AoE)
  </a>
  </p>
</div>
<div class="flex flex-col md:flex-row justify-between w-full opacity-0 transition-opacity duration-1000" id="dates-container">
  <div class="flex flex-col w-full md:w-1/3 border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md mb-4 md:mb-0">
    <div class="text-center">
      <h4 class="text-3xl font-bold">Extended Abstract</h4>
      <p class="mt-3 text-3xl font-medium md:text-3xl">
        March 14<sup>th</sup> 2026
      </p> 
    </div>
  </div>

  <div class="flex flex-col w-full md:w-1/3 border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md mb-4 md:mb-0 md:mx-4">
    <div class="text-center">
      <h4 class="text-3xl font-bold">Author Notification</h4>
      <p class="mt-3 text-3xl font-medium md:text-3xl">
        April 16<sup>th</sup> 2026
      </p>
    </div>
  </div>

  <div class="flex flex-col w-full md:w-1/3 border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-3xl font-bold">Camera Ready</h4>
      <p class="mt-3 text-3xl font-medium md:text-3xl">
        May 5<sup>th</sup> 2026
      </p>
    </div>
  </div>
</div>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.remove('opacity-0');
        entry.target.classList.add('opacity-100');
      }
    });
  }, { threshold: 0.1 });

  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('#important-dates, #dates-container');
    elements.forEach((el) => observer.observe(el));
  });
</script>
