---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.svg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 md:block">
    <Picture
      src={heroImage}
      alt="VisGames"
      widths={[150, 300, 450]}
      sizes="(max-width: 600px) 75vw, 480px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="p-8 m-4">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Workshop on Visualization Play, Games, and Activities
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      This is the <strong>second</strong> EuroVis Workshop on Visualization Play, Games, and Activities that
      is collocated with the <a
      href="https://www.eurovis.org.uk/"
      target="_blank"
      class="underline"
      rel="noopener">
      EuroVis conference</a> taking place from June 8-12, 2026 in Nottingham, UK.
    </p>

    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      8<sup>th</sup> of June 2026, Nottingham, UK
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <div
        class="flex gap-2 items-center justify-center px-2 py-1 text-gray-400 border border-gray-300 rounded-sm cursor-not-allowed opacity-50 text-base font-medium">
        <Icon class="text-gray-400 w-5 h-5" name="bx:bxl-github" />
        Submissions & Materials
      </div>
      <div
        class="flex gap-2 items-center justify-center px-2 py-1 text-gray-400 border border-gray-300 rounded-sm cursor-not-allowed opacity-50 text-base font-medium">
        <Icon class="text-gray-400 w-5 h-5" name="mdi:file-document-outline" />
          Papers & Proceedings
      </div>
    </div>
  </div>
</main>



<section class="w-full flex flex-col md:flex-row justify-center items-stretch gap-10 mb-16 px-2">
  <!-- Discord Widget -->
  <div class="discord-iframe-container w-full md:w-2/5 max-w-2xl rounded-lg shadow-lg overflow-hidden border border-gray-200 bg-white mx-auto flex flex-col transition-transform duration-300 hover:scale-105">
    <h2 class="text-2xl md:text-3xl font-bold text-center py-5 bg-white text-[#FF69B4]">
      Join our Discord Community
    </h2>
    <div class="w-full px-4 pb-6 bg-white flex justify-center items-center">
      <iframe
        src="https://discordapp.com/widget?id=1346028128300171337&theme=light"
        class="w-full h-96 md:h-[28rem] rounded-lg border-2 border-[#FF69B4]"
        allowtransparency="true"
        sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"
        title="Discord Widget"
      ></iframe>
    </div>
  </div>
  <!-- YouTube & Socials -->
  <div class="w-full md:w-3/5 max-w-2xl rounded-lg shadow-lg overflow-hidden border border-gray-200 bg-white mx-auto flex flex-col transition-transform duration-300 hover:scale-105">
    <h2 class="text-2xl md:text-3xl font-bold text-center py-5 bg-white text-[#FF69B4]">
      Follow Us & Watch Highlights
    </h2>
    <div class="w-full px-4 pb-6 bg-white flex flex-col items-center gap-6">
     <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/5MNhVxpSotw?si=kfCAD2E8Ikf-saqN" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen class="w-full h-96 md:h-[28rem] rounded-lg border-2 border-[#FF69B4]"></iframe>
      <div class="flex flex-col items-center gap-3">
        <span class="font-semibold text-lg md:text-xl text-gray-700">Social Media</span>
        <div class="flex gap-6 mt-2">
          <a href="https://www.linkedin.com/company/visgamesworkshop" target="_blank" rel="noopener" class="text-black hover:underline flex items-center gap-2 text-xl md:text-2xl">
            <Icon name="mdi:linkedin" class="w-7 h-7 text-[#FF69B4]" />
            LinkedIn
          </a>
          <a href="https://github.com/VisGamesWorkshop/" target="_blank" rel="noopener" class="text-black hover:underline flex items-center gap-2 text-xl md:text-2xl">
            <Icon name="mdi:github" class="w-7 h-7 text-[#FF69B4]" />
            GitHub
          </a>
          <a href="https://www.youtube.com/@visgames.workshop" target="_blank" rel="noopener" class="text-black hover:underline flex items-center gap-2 text-xl md:text-2xl">
            <Icon name="mdi:youtube" class="w-7 h-7 text-[#FF69B4]" />
            YouTube
          </a>
        </div>
      </div>
    </div>
  </div>
</section>