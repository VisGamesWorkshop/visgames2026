---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.svg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 md:block">
    <Picture
      src={heroImage}
      alt="VisGames"
      widths={[200, 400, 600]}
      sizes="(max-width: 600px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Workshop on Visualization Play, Games, and Activities
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      This is the <strong>second</strong> EuroVis Workshop on Visualization Play, Games, and Activities that
      is collocated with the <a
      href="https://www.eurovis.org.uk/"
      target="_blank"
      class="underline"
      rel="noopener">
      EuroVis conference</a> taking place from June 2-6, 2026 in Nottingham, UK.
    </p>

    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      2<sup>nd</sup> of June 2026, Nottingham, UK
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <div
        class="flex gap-1 items-center justify-center px-4 py-2 text-gray-400 border border-gray-300 rounded cursor-not-allowed opacity-50">
        <Icon class="text-gray-400 w-6 h-6" name="bx:bxl-github" />
        Submissions & Materials
      </div>
      <div
        class="flex gap-1 items-center justify-center px-4 py-2 text-gray-400 border border-gray-300 rounded cursor-not-allowed opacity-50">
        <Icon class="text-gray-400 w-6 h-6" name="mdi:file-document-outline" />
          Papers & Proceedings
      </div>
    </div>
  </div>
</main>



<section class="w-full flex flex-col md:flex-row justify-center items-stretch gap-10 mb-16 px-2">
  <!-- Discord Widget -->
  <div class="discord-iframe-container w-full md:w-2/5 max-w-2xl rounded-lg shadow-lg overflow-hidden border border-gray-200 bg-white mx-auto flex flex-col transition-transform duration-300 hover:scale-105">
    <h2 class="text-2xl md:text-3xl font-bold text-center py-5 bg-white text-pink-600 border-b border-gray-200">
      Join our Discord Community
    </h2>
    <div class="w-full px-4 pb-6 bg-white flex justify-center items-center">
      <iframe
        src="https://discordapp.com/widget?id=1346028128300171337&theme=light"
        class="w-full h-96 md:h-[28rem] rounded-lg border-2 border-pink-500"
        allowtransparency="true"
        sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"
        title="Discord Widget"
      ></iframe>
    </div>
  </div>
  <!-- YouTube & Socials -->
  <div class="w-full md:w-3/5 max-w-2xl rounded-lg shadow-lg overflow-hidden border border-gray-200 bg-white mx-auto flex flex-col transition-transform duration-300 hover:scale-105">
    <h2 class="text-2xl md:text-3xl font-bold text-center py-5 bg-white text-pink-600 border-b border-gray-200">
      Follow Us & Watch Highlights
    </h2>
    <div class="w-full px-4 pb-6 bg-white flex flex-col items-center gap-6">
      <iframe
        width="100%"
        height="300"
        src="https://www.youtube.com/embed/dQw4w9WgXcQ"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        class="rounded-lg border-2 border-pink-500"
      ></iframe>
      <div class="flex flex-col items-center gap-3">
        <span class="font-semibold text-lg md:text-xl text-gray-700">Social Media</span>
        <div class="flex gap-6 mt-2">
          <a href="https://www.linkedin.com/company/visgamesworkshop" target="_blank" rel="noopener" class="text-black hover:underline flex items-center gap-2 text-xl md:text-2xl">
            <Icon name="mdi:linkedin" class="w-7 h-7 text-pink-600" />
            LinkedIn
          </a>
          <a href="https://github.com/VisGamesWorkshop/visgames2026" target="_blank" rel="noopener" class="text-black hover:underline flex items-center gap-2 text-xl md:text-2xl">
            <Icon name="mdi:github" class="w-7 h-7 text-pink-600" />
            GitHub
          </a>
          <a href="mailto:info@visgames.org" class="text-black hover:underline flex items-center gap-2 text-xl md:text-2xl">
            <Icon name="mdi:email" class="w-7 h-7 text-pink-600" />
            Email
          </a>
        </div>
      </div>
    </div>
  </div>
</section>