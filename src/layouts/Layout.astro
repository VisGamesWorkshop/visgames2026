---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';



export interface Props {
  title: string;
}
const { title } = Astro.props;

const makeTitle = title
  ? title
  : "Astroship - Starter Template for Astro with Tailwind CSS";
---

<!DOCTYPE html>
<html lang="en">
  <title>{makeTitle}</title>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- HTML Meta Tags -->
    <meta name="description" content="This is the first EuroVis Workshop on Visualization Play, Games, and Activities that is collocated with the EuroVis 2025 conference.">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://visgames2025.netlify.app/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="VisGames 2025 Workshop">
    <meta property="og:description" content="This is the first EuroVis Workshop on Visualization Play, Games, and Activities that is collocated with the EuroVis 2025 conference.">
    <meta property="og:image" content="https://visgames2025.netlify.app/opengraph.png">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="visgames2025.netlify.app">
    <meta property="twitter:url" content="https://visgames2025.netlify.app/">
    <meta name="twitter:title" content="Visgames 2025 Workshop">
    <meta name="twitter:description" content="This is the first EuroVis Workshop on Visualization Play, Games, and Activities that is collocated with the EuroVis 2025 conference.">
    <meta name="twitter:image" content="https://visgames2025.netlify.app/opengraph.png">

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
  </head>
  <body>
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
